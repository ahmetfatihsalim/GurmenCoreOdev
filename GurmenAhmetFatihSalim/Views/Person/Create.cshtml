@{
}
@model Person

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Person</h2>
            <hr />
        </div>
        <div class="mb-3 p-1 row">
            <label asp-for="Name" class="p-0">Name</label>
            <input asp-for="Name" type="text" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3 p-1 row">
            <label asp-for="Surname" class="p-0">Surname</label>
            <input asp-for="Surname" type="text" class="form-control" />
            <span asp-validation-for="Surname" class="text-danger"></span>
        </div>
        <div class="mb-3 p-1 row">
            <label asp-for="Gender" class="p-0">Gender</label>
            <input asp-for="Gender" type="text" class="form-control" />
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
        <div class="mb-3 p-1 row">
            <label asp-for="Age" class="p-0">Age</label>
            <input asp-for="Age" type="number" class="form-control" />
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6 col-md-6">
                <button type="submit" class="btn btn-primary form-control">Create</button>
            </div>
            <div class="col-6 col-md-6">
                <a asp-controller="Person" asp-action="Index" class="btn btn-secondary border form-control">
                    Back To List
                </a>
            </div>
        </div>
    </div>
</form>