@{
}
@model List<Person>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Person List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Person" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>&nbsp; Create New Person
            </a>
        </div>
    </div>
    <br>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Surname
                </th>
                <th>
                    Gender
                </th>
                <th>
                    Age
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (Person person in Model.OrderBy(person => person.ID))
            {
                <tr>
                    <td>
                        @person.Name
                    </td>
                    <td>
                        @person.Surname
                    </td>
                    <td>
                        @person.Gender
                    </td>
                    <td>
                        @person.Age
                    </td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@person.ID" class="btn">Edit</a>
                            <a asp-action="Delete" asp-route-id="@person.ID" class="btn">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>